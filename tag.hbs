{{!-- The tag below means - insert everything in this file into the {body} of the default.hbs template --}}
{{!< default}}

{{#tag}}
<div class="container">
	<div class="row">
		<div class="col-lg-8 offset-lg-2 text-center tag-title">
			<h1>{{name}}</h1>
		</div>
	</div>
</div>
{{/tag}}

{{!-- The main content area --}}
<main id="content" role="main">
	<div class="loop">
		<div class="swiper-container">
			<div class="next"><a href="#"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a></div>
    		<div class="prev"><a href="#"><i class="fa fa-long-arrow-left" aria-hidden="true"></i></a></div>
		    <div class="swiper-wrapper">
				{{#foreach posts}}
					{{> "loop"}}
			    {{/foreach}}
			</div>
		</div>
	</div>
</main>